<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_view"
    tools:context=".home_module.SymptomsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="@string/how_are_you_feeling_at_this_moment"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                            android:id="@+id/feeling_good"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="24dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:strokeColor="@android:color/holo_green_light"
                            app:strokeWidth="1dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:drawableEnd="@drawable/ic_mood_black_24dp"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center_vertical"
                                android:paddingStart="20dp"
                                android:paddingTop="16dp"
                                android:paddingEnd="20dp"
                                android:paddingBottom="16dp"
                                android:text="@string/good"
                                android:textColor="@android:color/holo_green_dark"
                                android:textSize="16sp" />

                        </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                            android:id="@+id/feeling_bad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:strokeColor="@android:color/holo_red_light"
                            app:strokeWidth="1dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:drawableEnd="@drawable/ic_mood_bad_black_24dp"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center_vertical"
                                android:paddingStart="20dp"
                                android:paddingTop="16dp"
                                android:paddingEnd="20dp"
                                android:paddingBottom="16dp"
                                android:text="@string/bad"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="16sp" />

                        </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clickable="false"
                android:focusable="false"
                app:cardBackgroundColor="#FF3700B3"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="start|center_vertical"

                        android:src="@drawable/coronavirus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:gravity="center"
                        android:fontFamily="@font/cherry_swash"
                        android:text="@string/symptom_top_cardview_text"
                        android:textColor="#fafafa"
                        android:textSize="14sp"
                        android:textStyle="italic|bold" />

                </LinearLayout>

            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/cherry_swash"
                android:textStyle="bold"
                android:text="Main Symptoms"
                android:textColor="#FAFAFA"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                        android:id="@+id/symptoms_fever"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:strokeWidth="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/fever_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="Fever"
                                android:fontFamily="@font/cherry_swash"
                                android:textColor="#008EFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/fever_short_des"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/fever_title"
                                android:gravity="start"
                                android:text="@string/fever_des"
                                android:textColor="#8A8989"
                                android:fontFamily="@font/cherry_swash"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/fever_image"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_below="@id/fever_short_des"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/fever_image" />


                        </RelativeLayout>

                    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                        android:id="@+id/symptoms_DryCough"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:strokeWidth="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/cough_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="Dry Cough"
                                android:fontFamily="@font/cherry_swash"
                                android:textColor="#008EFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/cough_short_des"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/cough_title"
                                android:gravity="start"
                                android:text="@string/cough_des"
                                android:textColor="#8A8989"
                                android:fontFamily="@font/cherry_swash"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/cough_image"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_below="@id/cough_short_des"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/cough_image" />


                        </RelativeLayout>

                    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                        android:id="@+id/symptoms_shortnessOfBreath"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:strokeWidth="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/shortnessOfBreath_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="@string/shortness_of_breath"
                                android:textColor="#008EFF"
                                android:fontFamily="@font/cherry_swash"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/shortnessOfBreath_short_des"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/shortnessOfBreath_title"
                                android:gravity="start"
                                android:fontFamily="@font/cherry_swash"
                                android:text="@string/shortnessOfBreath_des"
                                android:textColor="#8A8989"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/shortnessOfBreath_image"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_below="@id/shortnessOfBreath_short_des"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/shortness_of_breath_image" />

                        </RelativeLayout>

                    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                        android:id="@+id/symptoms_achesAndPains"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:strokeWidth="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/achesAndPains_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="@string/aches_and_pains_symptom_name"
                                android:textColor="#008EFF"
                                android:fontFamily="@font/cherry_swash"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/achesAndPains_short_des"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/achesAndPains_title"
                                android:gravity="start"
                                android:text="@string/achesAndPains_des"
                                android:textColor="#8A8989"
                                android:fontFamily="@font/cherry_swash"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/achesAndPains_image"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_below="@+id/achesAndPains_short_des"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ache_and_pain_image" />

                        </RelativeLayout>

                    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/cherry_swash"
                android:textStyle="bold"
                android:text="Other Symptoms"
                android:textColor="#FAFAFA"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                        android:id="@+id/symptoms_headache"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:strokeWidth="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/headache_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="Headache"
                                android:fontFamily="@font/cherry_swash"
                                android:textColor="#008EFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/headache_short_des"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/headache_title"
                                android:gravity="start"
                                android:fontFamily="@font/cherry_swash"
                                android:text="@string/headache_des"
                                android:textColor="#8A8989"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/headache_image"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_below="@id/headache_short_des"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/headache_image" />


                        </RelativeLayout>

                    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                        android:id="@+id/symptoms_running_nose"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:strokeWidth="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/running_nose_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="Running Nose"
                                android:fontFamily="@font/cherry_swash"
                                android:textColor="#008EFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/running_nose_short_des"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/running_nose_title"
                                android:gravity="start"
                                android:fontFamily="@font/cherry_swash"
                                android:text="@string/cough_des"
                                android:textColor="#8A8989"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/running_nose_image"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_below="@id/running_nose_short_des"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/running_nose_image" />


                        </RelativeLayout>

                    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                        android:id="@+id/symptoms_diarrhea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:strokeWidth="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/diarrhea_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="Diarrhea"
                                android:fontFamily="@font/cherry_swash"
                                android:textColor="#008EFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/diarrhea_short_des"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/diarrhea_title"
                                android:gravity="start"
                                android:fontFamily="@font/cherry_swash"
                                android:text="@string/diarrhea_des"
                                android:textColor="#8A8989"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/diarrhea_image"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_below="@+id/diarrhea_short_des"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/diarrhea_image" />

                        </RelativeLayout>

                    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                        android:id="@+id/symptoms_sore_throat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:strokeWidth="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/sore_throat_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="Sore Throat"
                                android:fontFamily="@font/cherry_swash"
                                android:textColor="#008EFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/sore_throat_short_des"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/sore_throat_title"
                                android:gravity="start"
                                android:fontFamily="@font/cherry_swash"
                                android:text="@string/sore_throat_des"
                                android:textColor="#8A8989"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/sore_throat_image"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_below="@id/sore_throat_short_des"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/sore_throat_image" />

                        </RelativeLayout>

                    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>