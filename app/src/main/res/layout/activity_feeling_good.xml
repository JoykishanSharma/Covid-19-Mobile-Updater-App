<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FeelingGoodActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#51FAFAFA">

    <ImageView
        android:id="@+id/back_arrow1"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_gravity="start"
        android:src="@drawable/arrow_left_black_24dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="100dp">

        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:strokeWidth="1dp"
            app:cardCornerRadius="12dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:padding="16dp"
                android:background="@drawable/card_gradient">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="2"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Great!"
                            android:textSize="24sp"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="#FAFAFA"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thanks for Responding us!"
                            android:textSize="18sp"
                            android:layout_weight="2"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="#FAFAFA"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stay Home, Stay Safe!"
                            android:textSize="18sp"
                            android:layout_weight="2"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="#00FF0A"/>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/clipart_house"
                        />


                </LinearLayout>

            </LinearLayout>


        </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

    </LinearLayout>



</LinearLayout>